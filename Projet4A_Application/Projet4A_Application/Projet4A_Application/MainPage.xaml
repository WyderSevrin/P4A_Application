<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projet4A_Application.MainPage"
             BackgroundColor="AntiqueWhite"
             >

    <FlexLayout Direction="Column" AlignContent="Center" JustifyContent="SpaceEvenly">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="DarkGreen" FlexLayout.AlignSelf="Center" >
            <Label Text="E-Biblio" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <Entry Placeholder="Code Utilisateur" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="LightGray"/>
                <Button Text="Next" HorizontalOptions="Center" Clicked="OnClickUser"/>
            </StackLayout>
            <Button Text="Continuer en tant qu'invité" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" BackgroundColor="LightGray" Clicked="OnClickUserless" />
            <Label HorizontalOptions="StartAndExpand"/>
        </StackLayout>
        <Label/>
        <Button Text="Settings" FlexLayout.AlignSelf="Center" FontAttributes="Bold" Clicked="OnSettingsClick" />
    </FlexLayout>

</ContentPage>
