<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projet4A_Application.MainPage"
             BackgroundColor="LightYellow"
             >

    <FlexLayout Direction="Column" AlignContent="Center" JustifyContent="SpaceEvenly">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="ForestGreen" FlexLayout.AlignSelf="Center" >
            <Label Text="E-Biblio" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center" Padding="0,10,0,5"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <Entry x:Name="CodeEntry" Placeholder="Code Utilisateur" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="LightGray" Margin="10,10,10,5" ClearButtonVisibility="Never"/>
                <Button x:Name="NextButton" Text="Next" HorizontalOptions="Center" Clicked="OnClickUser" Margin="10,10,10,5"/>
            </StackLayout>
            <Button x:Name="InviteeButton" Text="Continuer en tant qu'invité" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" BackgroundColor="LightGray" Clicked="OnClickUserless" Margin="10,5,10,20" />
        </StackLayout>
        <Button x:Name="SettingsButton" Text="Settings" FlexLayout.AlignSelf="Center" FontAttributes="Bold" Clicked="OnSettingsClick" />
    </FlexLayout>

</ContentPage>
